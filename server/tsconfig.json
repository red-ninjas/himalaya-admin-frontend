{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "skipLibCheck": true,
    "outDir": "../dist/server",
    "baseUrl": "./",
    "incremental": true
  },
  "ts-node": {
    "files": true
  },
  "exclude": [
    ".httpCache",
    ".next",
    "database",
    ".cache",
    "node_modules",
    "dist",
    "public"
  ]
}